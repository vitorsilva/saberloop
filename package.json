{
  "name": "saberloop",
  "version": "2.0.0",
  "description": "Saberloop - The fun way to learn and track your progress with AI-powered quizzes",
  "homepage": "https://github.com/vitorsilva/saberloop#readme",
  "bugs": {
    "url": "https://github.com/vitorsilva/saberloop/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/vitorsilva/saberloop.git"
  },
  "license": "ISC",
  "author": "",
  "type": "module",
  "scripts": {
    "version": "node scripts/generate-version.js",
    "predev": "npm run version",
    "dev": "vite --port 8888",
    "prebuild": "npm run version",
    "build": "vite build",
    "deploy": "node scripts/deploy-ftp.cjs",
    "deploy:staging": "node scripts/deploy-ftp.cjs --staging",
    "deploy:landing": "node scripts/deploy-landing.cjs",
    "deploy:telemetry": "node scripts/deploy-telemetry.cjs",
    "deploy:party": "node scripts/deploy-party.cjs",
    "build:deploy": "npm run build && npm run deploy",
    "build:staging": "cross-env DEPLOY_TARGET=staging npm run build",
    "build:deploy:staging": "npm run build:staging && npm run deploy:staging",
    "upload:assetlinks": "node scripts/upload-assetlinks.cjs",
    "preview": "vite preview",
    "test": "vitest",
    "test:php": "docker-compose run --rm php-api vendor/bin/phpunit",
    "test:coverage": "vitest --coverage",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:party:integration": "node scripts/test-party-integration.cjs",
    "lint:dead-code": "knip",
    "lint:dead-code:fix": "knip --fix",
    "arch:test": "depcruise src --config .dependency-cruiser.cjs",
    "arch:graph": "depcruise src --output-type dot --config .dependency-cruiser.cjs > dependency-graph.dot",
    "telemetry:start": "docker-compose -f docker-compose.telemetry.yml up -d",
    "telemetry:stop": "docker-compose -f docker-compose.telemetry.yml down",
    "telemetry:import": "node scripts/telemetry/import-to-loki.cjs",
    "telemetry:errors": "node scripts/telemetry/error-report.cjs",
    "translate": "node scripts/translate.js",
    "docs": "jsdoc -c jsdoc.config.json",
    "docs:open": "jsdoc -c jsdoc.config.json && start docs/api/index.html",
    "typecheck": "tsc -p jsconfig.json --noEmit",
    "test:mutation": "stryker run",
    "screenshots:process": "node scripts/process-screenshots.cjs",
    "screenshots:process:no-frame": "node scripts/process-screenshots.cjs --no-frame"
  },
  "devDependencies": {
    "@playwright/test": "^1.56.1",
    "@stryker-mutator/core": "^9.4.0",
    "@stryker-mutator/vitest-runner": "^9.4.0",
    "@vitest/coverage-v8": "^4.0.1",
    "autoprefixer": "^10.4.22",
    "cross-env": "^10.1.0",
    "dependency-cruiser": "^17.3.5",
    "dotenv": "^17.2.3",
    "fake-indexeddb": "^6.2.4",
    "ftp-deploy": "^2.4.7",
    "jsdoc": "^4.0.5",
    "jsdom": "^27.0.1",
    "knip": "^5.76.1",
    "netlify-cli": "^23.11.1",
    "postcss": "^8.5.6",
    "sharp": "^0.34.5",
    "tailwindcss": "^3.4.18",
    "typescript": "^5.9.3",
    "vite": "^7.1.12",
    "vite-plugin-pwa": "^1.1.0",
    "vitest": "^4.0.1",
    "workbox-window": "^7.4.0"
  },
  "dependencies": {
    "i18next": "^25.7.3",
    "i18next-browser-languagedetector": "^8.2.0",
    "idb": "^8.0.3",
    "loglevel": "^1.9.2",
    "lz-string": "^1.5.0",
    "qrcode": "^1.5.4",
    "web-vitals": "^5.1.0"
  }
}
